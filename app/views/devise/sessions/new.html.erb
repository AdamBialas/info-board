<div class="card">
  <div class="card-header text-white text-center">
    Login user
  </div>
  <div class="d-flex justify-content-center p-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field mb-3 mt-3">
        <%= f.label :email, class:"form-label" %><br />
          <%= f.email_field :email, autofocus: true,class: "form-control" , autocomplete: "email" %>
      </div>

      <div class="field mb-3 mt-3">
        <%= f.label :password,class:"form-label" %><br />
          <%= f.password_field :password,class: "form-control" , autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me , class:"form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
        </div>
        <% end %>

          <div class="actions">
            <%= f.submit "Log in",class: "btn btn-primary" %>
          </div>
          <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>